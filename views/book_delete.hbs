<h1>{{title}}: {{book.name}}</h1>
{{#if book_instances.length}}
  <p>
    <strong>Delete the following book instances before attempting to delete this
      book.</strong>
  </p>
  <div>
    <h4>Instances</h4>
    <dl>
      {{#each book_instances}}
        <dt>
          <a href={{this.url}}>{{this.title}}</a>
        </dt>
        <dd>{{this.summary}}</dd>
      {{/each}}
    </dl>
  </div>
{{else}}
  <p>Do you really want to delete this genre?</p>
  <form action="delete" method="post">
    <div class="form-group">
      <input
        type="hidden"
        name="genreid"
        id="genreid"
        value={{genre._id}}
        class="form-control"
      />
    </div>
    <button class="btn btn-primary" type="submit">Delete</button>
  </form>
{{/if}}
