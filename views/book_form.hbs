<h1>{{title}}</h1>
<form action="create" method="post">
  <div class="form-group">
    <label for="title">
      Title:
      <input
        type="text"
        id="title"
        class="form-control"
        placeholder="Name of book"
        name="title"
        required
        value={{book.title}}
      />
    </label>
  </div>
  <div class="form-group">
    <label for="author">Author:
      <select name="author" id="author" class="form-control" required>
        <option value="">--Please select an author--</option>
        {{#each authors}}
          {{#if book}}
            {{#if (haveEqualId this._id book.author._id)}}
              <option selected value="{{this._id}}">{{this.name}}</option>
            {{else}}
              <option value="{{this._id}}">{{this.name}}</option>
            {{/if}}
          {{else}}
            <option value="{{this._id}}">{{this.name}}</option>
          {{/if}}
        {{/each}}
      </select>
    </label>
  </div>
  <div class="form-group">
    <label for="summary">
      Summary:
      <textarea
        name="summary"
        id="summary"
        class="form-control"
        required
        placeholder="Summary"
      >{{book.summary}}</textarea>
    </label>
  </div>
  <div class="form-group">
    <label for="isbn">
      ISBN:
      <input
        required
        id="isbn"
        class="form-control"
        type="text"
        placeholder="ISBN13"
        name="isbn"
        value={{book.isbn}}
      />
    </label>
  </div>
  <div class="form-group">
    <label for="">Genre:</label>
    <div>
      {{#each genres}}
        <div style="display: inline; padding-right:10px;">
          {{#if this.checked}}
            <input
              checked
              type="checkbox"
              class="checkbox-input"
              name="genre"
              id={{this._id}}
              value={{this._id}}
            />
          {{else}}
            <input
              type="checkbox"
              class="checkbox-input"
              name="genre"
              id={{this._id}}
              value={{this._id}}
            />
          {{/if}}
          <label for="{{this._id}}">
            &nbsp;{{this.name}}
          </label>
        </div>
      {{/each}}
    </div>
  </div>
  <button class="btn btn-primary" type="submit">Submit</button>
  {{#if errors}}
    <ul>
      {{#each errors}}
        <li>{{this.msg}}</li>
      {{/each}}
    </ul>
  {{/if}}
</form>
