<h1>{{title}}</h1>
{{#with bookinstance_list as |bookinstance_list|}}
  {{#if bookinstance_list.length}}
    <ul>
      {{#each bookinstance_list}}
        {{#with this as |bookinstance|}}
          <li>
            <a href="{{bookinstance.url}}">{{bookinstance.book.title}}
              :
              {{bookinstance.imprint}}&nbsp;</a>
          </li>
          {{#if (eq bookinstance.status "Available")}}
            <span class="text-success">{{bookinstance.status}}</span>
          {{else}}
            {{#if (eq bookinstance.status "Maintenance")}}
              <span class="text-danger">{{bookinstance.status}}</span>
            {{else}}
              <span class="text-warning">{{bookinstance.status}}</span>
            {{/if}}
          {{/if}}
          {{#if (unlessEq bookinstance.status "Available")}}
            <span>(Due: {{bookinstance.due_back_formatted}})</span>
          {{/if}}
        {{/with}}
      {{/each}}
    </ul>
  {{else}}
    <p>There are no book copies in this library</p>
  {{/if}}
{{/with}}
