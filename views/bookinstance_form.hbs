<h1>{{title}}</h1>
<form action="create" method="post">
  <div class="form-group">
    <label for="book">
      Book:
      <select required name="book" id="book" class="form-control">
        <option value="">--Please select a book--</option>
        {{#each book_list}}
          {{#if (unlessEq ../selected_book this.idAsString) }}
            <option value="{{this.idAsString}}">{{this.title}}</option>
          {{else}}
            <option
              selected
              value="{{this.idAsString}}"
            >{{this.title}}</option>
          {{/if}}
        {{/each}}
      </select>
    </label>
  </div>
  <div class="form-group">
    <label for="imprint">
      Imprint:
      <input
        type="text"
        id="imprint"
        class="form-control"
        required
        placeholder="Publisher and date information"
        name="imprint"
        value="{{bookinstance.imprint}}"
      />
    </label>
  </div>
  <div class="form-group">
    <label for="due_back">
      Date when book available:
      <input
        type="date"
        id="due_back"
        class="form-control"
        value={{bookinstance.due_back_yyyy_mm_dd}}
      />
    </label>
  </div>
  <div class="form-group">
    <label for="status">
      Status:
      <select required name="status" id="status" class="form-control">
        <option value="">--Please select a status--</option>
        {{#each status_options}}
          {{#if (unlessEq ../bookinstance.status this)}}
            <option value="{{this}}">{{this}}</option>
          {{else}}
            <option selected value="{{this}}">{{this}}</option>
          {{/if}}
        {{/each}}
      </select>
    </label>
  </div>
  <button class="btn btn-primary" type="submit">Submit</button>
  {{#if errors}}
    <ul>
      {{#each errors}}
        {{this.msg}}
      {{/each}}
    </ul>
  {{/if}}
</form>
